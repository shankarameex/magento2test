<?xml version="1.0"?>
 
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:noNamespaceSchemaLocation="../../../../../lib/internal/Magento/
Framework/Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Ameex_AdminLogger" title="Ameex Admin Logger" 
                    sortOrder="100">
                    <resource id="Ameex_AdminLogger::manage_logs" title="Manage Logs" 
                        sortOrder="1" />
                    <resource id="Ameex_AdminLogger::configuration" title="Configurations"    sortOrder="2" />
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Ameex_AdminLogger::system_config" 
                                title="Admin Logger Section" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>